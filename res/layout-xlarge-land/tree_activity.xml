<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView style="@style/text_tree_title"
              android:id="@+id/title"
              android:layout_width="match_parent"
              android:gravity="center"
              android:padding="4dp"
              android:layout_height="wrap_content"/>
              
    <TextView android:id="@+id/address"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="wrap_content"/>

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment class="org.androidsoft.opendata.arbres.ui.fragment.TreeDataFragment"
            android:id="@+id/tree_data_fragment"
            android:layout_width="400dp"
            android:layout_height="match_parent"/>

        <fragment class="org.androidsoft.opendata.arbres.ui.fragment.TreeDescriptionFragment"
            android:id="@+id/tree_description_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>    
</LinearLayout>
